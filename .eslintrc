{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["@typescript-eslint", "import"],
  "env": {
    "es6": true
  },
  "rules": {
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-unreachable": "warn",
    "curly": ["warn", "multi"],
    "eqeqeq": ["warn", "always"],
    "no-unused-labels": "error",
    "no-multi-str": "error",
    "no-empty-pattern": "error",
    "no-const-assign": "error",
    "prefer-const": "error",
    "no-var": ["error", "always"],
    "block-spacing": ["error", "always"],
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}
